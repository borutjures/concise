{
  "name": "concise",
  "private": true,
  "version": "0.0.0",
  "author": "Guillermo Grau Panea",
  "license": "MIT",
  "description": "Tools for managing concise schemas",
  "keywords": [
    "schema",
    "pg",
    "postgres",
    "postgresql",
    "yaml"
  ],
  "homepage": "https://github.com/guigrpa/concise#readme",
  "bugs": {
    "url": "https://github.com/guigrpa/concise/issues"
  },
  "repository": "guigrpa/concise",
  "scripts": {
    "status": "oao status",
    "travis": "yarn bootstrap && yarn compile && yarn test",
    "build": "yarn bootstrap && yarn compile && yarn lint && yarn flow && yarn test && yarn xxl && yarn prepareRelease",
    "bootstrap": "oao bootstrap",
    "compile": "oao all --parallel \"yarn compile\"",
    "compileWatch": "oao all --parallel \"yarn compileWatch\"",
    "lint": "eslint packages",
    "flow": "flow check || exit 0",
    "xxl": "xxl --src packages --exclude node_modules,/lib/",
    "test": "yarn testCov",
    "testCov": "yarn testCov:prepare && yarn testCov:dev && yarn testCov:report",
    "testCov:prepare": "rm -rf ./coverage .nyc_output .nyc_tmp && mkdir .nyc_tmp",
    "testCov:report": "cp -r .nyc_tmp .nyc_output && nyc report --reporter=html --reporter=lcov --reporter=text",
    "testCov:dev": "yarn testCov:run && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-dev.json",
    "testCov:run": "jest --coverage && mv .nyc_output/coverage-final.json .nyc_tmp && rm -rf .nyc_output",
    "jestWatch": "jest --watch --coverage",
    "prepareRelease": "oao prepublish",
    "release": "oao publish"
  },
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-jest": "^19.0.0",
    "babel-polyfill": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.22.0",
    "babel-preset-stage-2": "6.22.0",
    "coveralls": "2.11.16",
    "cross-env": "3.1.4",
    "eslint": "3.15.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-flowtype": "2.30.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.9.0",
    "flow-copy-source": "^1.1.0",
    "jest": "^19.0.0",
    "nyc": "10.1.2",
    "oao": "^0.7.1",
    "xxl": "^1.0.1"
  },
  "jest": {
    "clearMocks": true,
    "testRegex": "packages/.*__tests__/.*\\.(test|spec)\\.(js|jsx)$",
    "coverageDirectory": ".nyc_output",
    "coverageReporters": [
      "json",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "packages/*/src/**",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ]
  }
}
